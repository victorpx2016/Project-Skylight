<div id="devise_header">RESEND UNLOCK INSTRUCTIONS</div>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><br />
  <%= f.email_field :email, autofocus: true, placeholder: "ENTER YOUR EMAIL" %></div>

  <div><%= f.submit ">RESEND INSTRUCTIONS<" %></div>
<% end %>

<%= render "devise/shared/links" %>
