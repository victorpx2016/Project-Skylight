<div id="postcontainer">

    <div id="colomn">
        <div id="date">
            <div id="date_d">
                <center>
                    <%= @post.title.strftime("%d") %>
                </center>
            </div>
            <div id="date_b_y">
                <center>
                    <%= @post.title.strftime("%b") %>&nbsp;
                    <%= @post.title.strftime("%Y") %>
                </center>
            </div>
        </div>
        <div id="triangle"></div>
        <p id="edit">
            <%= link_to '✎ Edit', edit_post_path(@post) %>
        </p>
        <p id="edit">
            <%= link_to '⁉︎︎ Comment', post_path(@post) %>
        </p>
        <p id="delete">
            <%= link_to '✕ Delete', post_path(@post), method: :delete,
            data: { confirm: 'Are you sure you want to delete this post?'} %>
        </p>
    </div>
    <div id="posttwo">
        <div id="moodtag"><%= @post.mood %></div>
        <% @post.tags.each do |tag| %>
        <div class="wordtag"><%= tag.content %></div>
        <% end %>
    </div>
    <div id="comments">
        <% @post.comments.each do |comment| %>
        <p>
            <b><%= comment.name %></b>&nbsp;:&nbsp;<%= comment.comment %>
        </p>
        <% end %>
        
        <%= form_for ([@post, @post.comments.build]) do |f| %>
  			<%= f.text_area :comment, placeholder: "ADD A COMMENT" %><%= f.submit :Post %>
		<% end %>
    </div>
</div>		

<%= javascript_include_tag "posts" %>

<div id="post_nav_bar_container">
	<div id="home_nav_bar">
	<center><%= link_to '⬅ ︎BACK TO HOME', posts_path %></center>
</div>

<div id="post_nav_user">
	<center>LIFERUG POST by <%= @post.user.name %></center>
</div>

</div>
	